---
// SocialFeeds.astro - Composant qui organise les flux sociaux
import InstagramFeed from './InstagramFeed.astro';
import TwitchFeed from './TwitchFeed.astro';

interface Props {
  instagramUsername: string;
  twitchUsername: string;
  title?: string;
  showTwitchChat?: boolean;
}

const { instagramUsername, twitchUsername, title = "Suivez-moi sur les réseaux", showTwitchChat = true } = Astro.props;
---

<section class="w-full py-12 bg-gradient-to-b from-purple-50/50 to-white/80">
  <div class="container mx-auto px-4 max-w-6xl">
    <!-- Titre avec un conteneur dédié -->
    <div class="title-container">
      <h2 class="text-3xl font-bold text-center text-gray-800 relative">
        <span class="relative inline-block">
          {title}
          <span class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></span>
        </span>
      </h2>
    </div>
    
    <!-- Espace dédié entre le titre et les cartes -->
    <div class="py-6"></div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8">
      <InstagramFeed username={instagramUsername} />
      <TwitchFeed username={twitchUsername} showChat={showTwitchChat} />
    </div>
  </div>
</section> 