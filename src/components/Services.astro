---
interface Service {
  title: string;
  description: string;
  icon?: string;
  imageSrc?: string;
}

interface Props {
  title: string;
  subtitle?: string;
  services: Service[];
}

const { title, subtitle, services } = Astro.props;
---

<section class="w-full py-12 bg-gradient-to-b from-purple-50/50 to-white/80">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
      {subtitle && <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">{subtitle}</p>}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-gray-50 rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
          {service.imageSrc && (
            <div class="h-48 overflow-hidden">
              <img 
                src={service.imageSrc} 
                alt={service.title} 
                class="w-full h-full object-cover"
              />
            </div>
          )}
          <div class="p-6">
            <div class="flex items-center mb-4">
              {service.icon && <div class="text-primary-500 mr-3" set:html={service.icon} />}
              <h3 class="font-bold text-xl">{service.title}</h3>
            </div>
            <p class="text-gray-700 dark:text-gray-300">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 