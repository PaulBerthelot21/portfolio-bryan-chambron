---
// ProfileImage.astro - Composant qui affiche l'image de profil avec le badge "ON AIR"
import OnAirBadge from './OnAirBadge.astro';

interface Props {
  imageSrc: string;
  altText: string;
}

const { imageSrc, altText } = Astro.props;
---

<div class="relative flex-shrink-0">
  <img src={imageSrc} alt={altText} class="w-[220px] h-[220px] md:w-[300px] md:h-[300px] object-cover rounded-full shadow-lg border-4 border-white" />
  <OnAirBadge />
</div> 